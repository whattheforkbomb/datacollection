<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="timeRemaining" type="com.whattheforkbomb.collection.data.TimeRemaining"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

    <!--        &lt;!&ndash;-->
    <!--            Face Indicator-->
    <!--            - Toggleable (visibility and function)-->
    <!--        &ndash;&gt;-->
    <!--        <FrameLayout-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="0dp"-->
    <!--            android:layout_weight="0.2"-->
    <!--            android:id="@+id/face_indicator_placeholder">-->
    <!--            &lt;!&ndash;  Replace with fragment for showing face indicated  &ndash;&gt;-->
    <!--        </FrameLayout>-->

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progress"
                android:indeterminate="false"
                android:progress="0"
                android:layout_marginTop="15dp"/>
            <!--
                Timer
            -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.10">
                <LinearLayout
                    android:id="@+id/timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|bottom"
                    android:visibility="visible">
                        <TextView
                            android:id="@+id/seconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@{String.valueOf(timeRemaining.seconds)}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/recordingState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:textAlignment="textStart"
                    android:visibility="invisible" />
            </FrameLayout>

            <!--
                Instructions
            -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:id="@+id/instructions_placeholder">
                <!--  Replace with fragment for showing instructions  -->
                <!--
                    - Image(GIF)/Video
                    - scroll down for textual description
                -->
            </FrameLayout>

            <!--
                Buttons
            -->
            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:enabled="false"
                android:text="@string/next"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:foregroundTint="#FFC107"
            android:foregroundTintMode="src_over"
            android:paddingBottom="10dp"
            android:scaleType="fitXY"
            android:scaleX="1.0"
            android:scaleY="1.0"
            app:srcCompat="@drawable/ic_baseline_gps_fixed_24" />

        <ImageView
            android:id="@+id/centreTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:alpha="0.7"
            android:scaleType="fitXY"
            android:scaleX="1.0"
            android:scaleY="1.0"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <ImageView
            android:id="@+id/animatedTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_baseline_fiber_manual_record_24" />
    </FrameLayout>
</layout>
